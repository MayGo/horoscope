generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}    

model User {
  id                Int      @id @default(autoincrement())
  email             String   @unique
  name              String?
  customer_id       String
  emailTime         String   @default("08:00")
  horoscopeAge      String   @default("Today's")
  isAdmin           Boolean  @default(false)
  p_countryOfBirth  String
  p_dateOfBirth     DateTime
  p_horoscopeLength String
  p_timeOfBirth     String
  price_id          String
  sign              String   @default("Aries")
  subscription_id   String
}

